<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ch7.Ex72MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
        android:id="@+id/createDatabase1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建数据库"></Button>
    <Button
        android:id="@+id/openDatabase1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开数据库"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<TextView
    android:layout_width="wrap_content"
    android:text="浏览通讯录："
    android:layout_height="wrap_content">

</TextView>
        <Button
            android:id="@+id/up1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一记录"></Button>

        <Button
            android:id="@+id/down1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一记录"></Button>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="用户姓名："
                android:textSize="10sp" />
            <EditText
                android:id="@+id/EditText01"
                android:layout_width="100dp"
                ></EditText>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="联系电话："
                android:textSize="10sp" />
            <EditText
                android:id="@+id/EditText02"
                android:layout_width="100dp"
                ></EditText>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="家庭住址："
                android:textSize="10sp" />
            <EditText
                android:id="@+id/EditText03"
                android:layout_width="100dp"
                ></EditText>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="电子信箱："
                android:textSize="10sp" />
            <EditText
                android:id="@+id/EditText04"
                android:layout_width="100dp"
                ></EditText>
        </TableRow>
    </TableLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"></Button>

        <Button
            android:id="@+id/update1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"></Button>

        <Button
            android:id="@+id/delete1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"></Button>

        <Button
            android:id="@+id/clear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭通讯录"></Button>
    </LinearLayout>

</LinearLayout>
